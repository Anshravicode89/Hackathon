    <style>
        * {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;

        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .navbar {
            border-radius: 0;
            /* Remove border radius */
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            background-color: #beffff;
            /* Adjust as needed */
            z-index: 2;
            /* Set a higher z-index to keep it above other elements */
        }

        .navbar ul {
            overflow: auto;
        }

        .navbar li {
            float: left;
            list-style: none;
            margin: 13px 20px;
        }

        .navbar li a {
            padding: 2px 8px;
            text-decoration: none;
            color: black;
            font-size: 18px;
        }

        .navbar li a:hover {
            color: rgb(72, 72, 217);
        }

        .search {
            float: right;
            color: white;
            padding: 12px 36px;
        }

        .navbar input {
            border: 2px solid black;
            border-radius: 15px;
            padding: 8px 14px;
            width: 173px;
        }

        img {
            width: 20px;
            height: 20px;
        }



        h1 {
            color: black;
            text-align: center;
            position: absolute;
            top: 80px;
            /* Adjust the top position as needed */
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
            margin: -69px 5px;
        }

        #file {
            display: none;
        }

        label {
            cursor: pointer;
            padding: 15px 30px;
            background-color: #3498db;
            color: #fff;
            border-radius: 5px;
            font-size: 18px;
        }

        label:hover {
            background-color: #2980b9;
        }

        .container {
            height: 100vh;
            width: 100%;
            position: absolute;
            right: 0;
            bottom: 0;
            z-index: -1;
            background: rgb(2, 0, 36);
            background: radial-gradient(circle, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(1, 184, 236, 1) 85%, rgba(0, 255, 149, 0.905) 100%);
            background-size: 300% 300%;
            animation: color 12s ease-in-out infinite;

        }

        @keyframes color {
            0% {
                background-position: 0 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0 50%;
            }
        }

        .flexbox-container {
            width: 400px;
            height: 530px;
            padding: 20px;
            background-color: #beffff;
            
            text-align: center;
            border-radius: 25px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: absolute;
            top: 54%;
            left: 50%;
            transform: translate(-50%, -50%);
            /* margin-top: 2; */
        }


        .button {
            padding: 10px 20px;
            margin: 10px;
            ;
            background-color: rgb(213, 180, 131);
            border-radius: 5px;
            text-decoration: none;
        }

        .button:hover {
            background-color: #b35700;
        }

        .flexbox-container>* {
            margin: auto;
            /* Center items vertically */
        }

        h2 {
            color: white;
            text-align: center;
            position: absolute;
            top: 80px;
            /* Adjust the top position as needed */
            left: 50%;
            transform: translateX(-50%);
            z-index: 5;
            margin: -1px 5px;
        }

        .flexbox-container h2 {
            position: absolute;
            top: 7px;
            /* Adjust the top position as needed */
            left: 50%;
            transform: translateX(-50%);
            color: black

        }
    </style>
</head>

